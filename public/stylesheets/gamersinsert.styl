.gamersinsert
  h2 margin 0 0 10px
  a text-decoration underline
    &:hover
      text-decoration none
  .container
    position: relative

  .gamers-form
    position relative
    z-index 20
    width 550px
    max-width 100%
    padding 0px
    margin-top 0px

    .bg
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      background white
      opacity 0.85
      border-radius 15px
      z-index -1

    [type="submit"]
      float right
      width 170px
      height 56px

      &:hover
        text-decoration underline

      .fa
        margin-right 10px

      &:enabled
        .fa
          display none