.header
  background url('http://lawyers-uganda.com/wp-content/uploads/2016/11/network.jpg')
  background-position center

  .page-title
    font-weight 200
    font-size 80px
    text-align center
    padding 100px
    text-transform uppercase
    color #fff
    margin 0
    box-sizing border-box

.navbar-header
  padding-left 3%
  background #FA5858

  text-align center
  font-size 20px

  .navbar-brand
    padding 5px 15px 5px 0
  .logo
    height 100%

.navbar-default .navbar-nav
  li
    a
      color #f5f5f5

  .dropdown-menu
    li a
      color #000000

.navbar
  background #FA5858
  font-size 20px

  .item-services
    a
      float left
      padding-right 0
    a + a
      padding-right inherit

  li
    display inline-block

  .navbar-right
    margin 0
  a
    display inline-block
    padding 20px
    color #fff
    text-decoration none

    &:hover
      background-color #3AB795
      text-decoration underline
